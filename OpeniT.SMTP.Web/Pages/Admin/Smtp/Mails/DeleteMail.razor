@namespace OpeniT.SMTP.Web.Pages.Admin

<MatDialog IsOpen="@(IsOpen && isRendered)" IsOpenChanged="this.IsOpenIsChanged" CanBeClosed="!ManageMails.IsBusy && !this.isBusy" SurfaceStyle="max-width: 20rem;">
	<MatDialogTitle Class="flex-column">
		<MatIcon Icon="delete" Class="@(ManageMails.IsBusy || this.isBusy ? "text-disabled" : "text-mdc-primary")" Style="font-size: 5rem;"></MatIcon>
		<span class="@(ManageMails.IsBusy || this.isBusy ? "text-disabled" : string.Empty)">@Mail?.Subject</span>
	</MatDialogTitle>
	<MatDialogContent>
		<p class="text-center">Are you sure you want to delete mail?</p>
	</MatDialogContent>
	@if (ManageMails.IsBusy || this.isBusy)
	{
		<MatProgressBar Indeterminate="true" Class="animate-on-bottom"></MatProgressBar>
	}
	<MatDialogActions>
		<MatButton Unelevated="true" Class="mdc-button-primary font-weight-normal mr-1" Disabled="ManageMails.IsBusy || this.isBusy" OnClick="this.Close">Cancel</MatButton>
		<MatButton Unelevated="true" Disabled="ManageMails.IsBusy || this.isBusy" OnClick="this.Save">Delete</MatButton>
	</MatDialogActions>
</MatDialog>