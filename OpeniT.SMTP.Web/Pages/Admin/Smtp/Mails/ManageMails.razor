@namespace OpeniT.SMTP.Web.Pages.Admin

@if (componentTypeToComponentInfoMap[typeof(TableMails)].Rendered)
{
	<TableMails @ref="@table" IsOpen="@componentTypeToComponentInfoMap[typeof(TableMails)].Shown" BaseRouteTemplate="@Constants.RouteTemplates.MANAGE_MAILS"></TableMails>
}

@if (componentTypeToComponentInfoMap[typeof(AddMail)].Rendered)
{
	<AddMail OnValidSave="(SmtpMail mail) => table?.Insert(mail)" IsOpen="@componentTypeToComponentInfoMap[typeof(AddMail)].Shown" IsOpenChanged="(bool isOpen) => this.ComponentDialogIsOpenChanged(isOpen, typeof(AddMail))"></AddMail>
}

@if (componentTypeToComponentInfoMap[typeof(CopyMail)].Rendered)
{
	<CopyMail OnValidSave="(SmtpMail mail) => table?.Insert(mail)" MailGuid="@MailGuid" IsOpen="@componentTypeToComponentInfoMap[typeof(CopyMail)].Shown" IsOpenChanged="(bool isOpen) => this.ComponentDialogIsOpenChanged(isOpen, typeof(CopyMail))"></CopyMail>
}

@if (componentTypeToComponentInfoMap[typeof(ViewMail)].Rendered)
{
	<ViewMail MailGuid="@MailGuid" IsOpen="@componentTypeToComponentInfoMap[typeof(ViewMail)].Shown" IsOpenChanged="(bool isOpen) => this.ComponentDialogIsOpenChanged(isOpen, typeof(ViewMail))"></ViewMail>
}

@if (componentTypeToComponentInfoMap[typeof(DeleteMail)].Rendered)
{
	<DeleteMail OnValidSave="(SmtpMail mail) => table?.Remove(mail)" MailGuid="@MailGuid" IsOpen="@componentTypeToComponentInfoMap[typeof(DeleteMail)].Shown" IsOpenChanged="(bool isOpen) => this.ComponentDialogIsOpenChanged(isOpen, typeof(DeleteMail))"></DeleteMail>
}