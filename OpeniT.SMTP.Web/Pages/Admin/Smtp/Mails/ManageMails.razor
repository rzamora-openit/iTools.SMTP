@namespace OpeniT.SMTP.Web.Pages.Admin

<CascadingValue Value="@this">
	@if (componentStates["table"].Shown)
	{
		<TableMails OnFilterChanged="@this.FiltersChanged" Shown="@componentStates["table"].Shown"></TableMails>
	}

	@if (componentStates["add"].Rendered)
	{
		<AddMail Shown="@componentStates["add"].Shown"></AddMail>
	}

	@if (componentStates["view"].Rendered)
	{
		<ViewMail Mail="@Mail" IsOpen="@componentStates["view"].Shown" IsOpenChanged="@((bool isOpen) => this.ComponentDialogIsOpenChanged(isOpen, "view"))"></ViewMail>
	}

	@if (componentStates["copy"].Rendered)
	{
		<CopyMail Mail="@Mail" Shown="@componentStates["copy"].Shown"></CopyMail>
	}

	@if (componentStates["delete"].Rendered)
	{
		<DeleteMail Mail="@Mail" IsOpen="@componentStates["delete"].Shown" IsOpenChanged="@((bool isOpen) => this.ComponentDialogIsOpenChanged(isOpen, "delete"))"></DeleteMail>
	}
</CascadingValue>