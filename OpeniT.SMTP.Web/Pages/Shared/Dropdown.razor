@namespace OpeniT.SMTP.Web.Pages.Shared

<div @ref="@anchorRef" class="@classMapper" style="@Style">
	<div class="mdc-dropdown-button @ButtonClass" style="@ButtonStyle" @onclick="this.Toggle" @onclick:stopPropagation="true">
		@ButtonContent
	</div>
	<Menu @ref="menu" IsOpen="IsOpen" IsOpenChanged="(bool isOpen) => this.IsOpenIsChanged(isOpen)" Class="@MenuClass" Style="@MenuStyle" Position="@Position" FlipCornerHorizontally="@FlipCornerHorizontally">
		@if (MenuContent != null)
		{
		@MenuContent(menu)
		}
	</Menu>
</div>